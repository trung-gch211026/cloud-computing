<div class="container mt-3 mb-3">
  <a href="/student" style="text-decoration: none; color: inherit;">
    <h1>Student List</h1>
  </a>
  <a href="/student/add" class="btn btn-success">Add</a>
  <a
    onclick="return confirm('Are you sure you want to delete all')"
    href="/student/deleteall"
    class="btn btn-danger"
  >Delete all</a>
  <tr>
    <th>
      <form action="/search" method="post">
        <input
          class="form-control mt-3"
          type="search"
          name="keyword"
          placeholder="Enter student name"
          required
        />
      </form>
    </th>
    <th>
      <select class="form-control mt-2" onchange="window.location.href=this.value">
        <option value="#">Select option to sort</option>
        <option value="/student/sort/gpa/asc">Sort by GPA ascending</option>
        <option value="/student/sort/gpa/desc">Sort by GPA descending</option>
        <option value="/student/sort/dob/asc">Birthday ascending</option>
        <option value="/student/sort/dob/desc">Birthday descending</option>
      </select>

    </th>
  </tr>
  <table border="1">
    <tr>
      <th colspan="9">Student List</th>
    </tr>
    <tr>
      <th>Image</th>
      <th>Student Name</th>
      <th>DoB</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Class</th>
      <th>GPA</th>
      <th>Student Year</th>
      <th>Menu</th>
    </tr>
    {{#each students}}
      <tr>
        <th><img src="/images/{{image}}" width="100" height="150" /></th>
        <th>{{name}}</th>
        <th>{{dateFormat dob "DD/MM/YYYY"}}</th>
        <th>{{gender}}</th>
        <th>{{department}}</th>
        <th>{{class}}</th>
        <th>{{gpa}}</th>
        <th>{{studentYear}}</th>
        <th>
          <a href="/student/edit/{{_id}}" class="btn btn-warning">Edit</a>
          <a
            href="/student/delete/{{_id}}"
            class="btn btn-danger"
            onclick="return confirm('Are you sure you want to delete this student?')"
          >Delete</a>
        </th>
      </tr>
    {{/each}}

  </table>
</div>