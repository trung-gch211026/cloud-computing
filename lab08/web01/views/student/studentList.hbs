<div class="container mt-3 mb-3">
  <h1>Student List</h1>
  <a href="/student/add" class="btn btn-success">Add</a>
  <a
    onclick="return confirm('Are you sure you want to delete all')"
    href="/student/deleteall"
    class="btn btn-danger"
  >Delete all</a>
  <table border="1">
    <tr>
      <th colspan="9">Student List</th>
    </tr>
    <tr>
      <th>Image</th>
      <th>Student Name</th>
      <th>DoB</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Class</th>
      <th>GPA</th>
      <th>Student Year</th>
      <th>Menu</th>
    </tr>
    {{#each students}}
      <tr>
        <th><img src="{{ image }}"></th>
        <th>{{name}}</th>
        <th>{{dateFormat dob "DD/MM/YYYY"}}</th>
        <th>{{gender}}</th>
        <th>{{department}}</th>
        <th>{{ class }}</th>
        <th>{{ gpa }}</th>
        <th>{{ studentYear }}</th>
        <td>
            <a href="/student/edit/{{ _id }}" class="btn btn-warning">Edit</a> 
            <a href="/student/delete/{{ _id }}" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    {{/each}}

  </table>
</div>