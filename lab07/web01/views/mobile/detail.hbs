<a href="/">Home</a>
<a href=""></a>
<div class="container">
  <div class="row">
    <div class="col">
      <img src="{{mobile.image}}" />
    </div>

    <div class="col">
      <h1>Product Information</h1>
      <h5 class="mt-5">Brand: {{mobile.brandName}}</h5>
      <h5>Model: {{mobile.phoneModel}}</h5>
      <h5>Price: {{mobile.price}}</h5>
      <h5>Quantity: {{mobile.quantity}}</h5>
      <form action="/mobile/order" method="post">
        <input
          type="number"
          name="quantity"
          min="1"
          max="{{mobile.quantity}}"
        />
        <input type="hidden" name="id" value="{{ mobile._id }}">
        <input type="submit" class="btn btn-primary" value="Order" />
      </form>
    </div>
  </div>
</div>